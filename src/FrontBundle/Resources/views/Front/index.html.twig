    {% set items = get_menu_items(true) %}
    {% for item in items %}
        <section id="{{item.slug}}" class="section {{item.className}}">
            <div class="container">
                <div class="row title text-center">
                    <h2>{{item.name}}</h2>
                    <h4 class="light muted">{{item.shortDescription | raw}}</h4>
                </div>
                <div class="row">
                    {{item.description | raw }}
                </div>
            </div>
            {% if item.id == 2 %}<div class="cut cut-bottom"></div>{% endif %}
        </section>
    {% endfor %}        
   
    <!-- Blog -->
    <section id="_blog" class="section">
        <div class="cut cut-top"></div>
        <div class="container container-blog">
            <div class="row title text-center">
                <h2>Blog</h2>
                <h4 class="light muted">{{ 'home.blog.title' | trans }}</h4>
            </div>
            <div class="row">
                <div class="col-md-8 post-list" id="post-list">
                    {{ blog_list() }}
                </div>
                <div class="col-md-4 post-sidebar">
                  {% include 'BlogBundle:Blog:sidebar.html.twig'%}
                </div>
            </div>
        </div>
    </section>


